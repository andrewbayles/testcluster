<!DOCTYPE html>
<html lang="en" dir="ltr">

  <%- include ('../partials/head.ejs') %>

  <body>

    <div id="topmost-margin">
		</div>

    <div class="container">

      <header>
        <%- include ('../partials/nav.ejs') %>
      </header>

      <div id="edit-main">

        <h2>Edit Game</h2>

        <form action="/games/<%=game.id%>?_method=PUT" method="POST">

          <!-- Basic text line -->
          <label for="title">Title:</label>
          <input type="text" name="title" value="<%=game.title%>" />

          <!-- Text line for file name with browse button -->
          <label for="smallimage">Small Image:</label>
          <input type="text" name="smallimage" value="<%=game.smallimage%>" />
          <img src="/images/nes-carts/<%= game.smallimage %>" />

          <!-- Text line for file name with browse button -->
          <label for="largeimage">Large Image:</label>
          <input type="text" name="largeimage" value="<%=game.largeimage%>" />

          <!-- Dropdown with genre listings -->
          <label for="genre">Genre:</label>
          <input type="text" name="genre" value="<%=game.genre%>" />

          <!-- Dropdown with system listings -->
          <label for="system">System:</label>
          <input type="text" name="system" value="<%=game.system%>" />

          <!-- Large text box for extended input -->
          <label for="summary">Summary:</label>
          <textarea id="summary" name="summary"><%=game.summary%></textarea>

          <!-- Dropdown with numeric listing from 1-5 -->
          <label for="rating">Rating:</label>
          <input type="text" name="rating" value="<%=game.rating%>" />

          <!-- Text line with numeric input -->
          <label for="price">Price:</label>
          <p>$</p><input type="text" name="price" value="<%=game.price%>" />

          <!-- Text line with numeric input -->
          <label for="quantity">Quantity:</label>
          <input type="text" name="quantity" value="<%=game.quantity%>" />

          <input type="submit" value="Submit">

        <form>

        <button type="button" name="button">
          <a href="/games">Back</a>
        </button>

      </div>

    </div>

    <%- include ('../partials/footer.ejs') %>

    <div id="bottommost-margin">
		</div>

  </body>
</html>
