<!DOCTYPE html>
<html lang="en" dir="ltr">

  <%- include ('../partials/head.ejs') %>

  <body>

    <div id="topmost-margin">
		</div>

    <div class="container">

      <header>
        <%- include ('../partials/nav.ejs') %>
      </header>

      <div id="show-main">

        <div id="show-col-1">

          <div id="show-title">
            <p><%=game.title%></p>
          </div>

          <div id="show-genre-system">
            <div id="show-genre">
              <p><%=game.genre%></p>
            </div>
            <div id="show-system">
              <p><%=game.system%></p>
            </div>
          </div>

          <div id="show-summary">
            <p><%=game.summary%></p>
          </div>

        </div>

        <div id="show-col-2">

          <div id="show-image">
            <img src="/images/nes-carts/<%= game.smallimage %>" alt="<%= game.title %>" />
          </div>

          <div class="show-bar">
            <p>Rating: <strong><%=game.rating%> out of 5</strong></p>
          </div>

          <div class="show-bar">
            <p>Price: <strong>$<%=game.price%></strong></p>
          </div>

          <div class="show-bar">
            <p>Available: <strong><%=game.quantity%></strong></p>
          </div>

        </div>

      </div>

      <!-- The following should appear only when a user is logged in. -->

      <div id="action-bar">

        <% if (currentUser) { %>

            <button class="edit-button" type="button" name="button"><a href="/games/<%=game._id%>/edit">EDIT</a></button>

            <form action="/games/<%=game._id%>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE"/>
            </form>

        <% } %>

        <button class="back-button" type="button" name="button">
          <a href="/games">BACK</a>
        </button>

      </div>

    </div>

    <%- include ('../partials/footer.ejs') %>

    <div id="bottommost-margin">
		</div>

  </body>
</html>
