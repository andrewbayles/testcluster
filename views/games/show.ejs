<!DOCTYPE html>
<html lang="en" dir="ltr">

  <%- include ('../partials/head.ejs') %>

  <body>

    <div id="topmost-margin">
		</div>

    <div class="container">

      <header>
        <%- include ('../partials/nav.ejs') %>
      </header>

      <div id="show-main">

        <div id="show-col-1">

          <div id="show-title">
            <p><%=game.title%></p>
          </div>

          <div id="show-genre-system">
            <div id="show-genre">
              <p><%=game.genre%></p>
            </div>
            <div id="show-system">
              <p><%=game.system%></p>
            </div>
          </div>

          <div id="show-summary">
            <p><%=game.summary%></p>
          </div>

        </div>

        <div id="show-col-2">

          <div id="show-image">
            <img src="/images/nes-carts/<%= game.smallimage %>" alt="<%= game.title %>" />
          </div>

          <div class="show-bar">
            <p><%=game.rating%></p>
          </div>

          <div class="show-bar">
            <p>$<%=game.price%></p>
          </div>

          <div class="show-bar">
            <p><%=game.quantity%></p>
          </div>

        </div>

      </div>

      <!-- The following should appear only when a user is logged in. -->
      <% if (currentUser) { %>
        <div id="action-bar">

          <button type="button" name="button"><a href="/games/<%=game._id%>/edit">Edit</a></button>
          <form action="/games/<%=game._id%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE"/>
          </form>

        </div>
      <% } %>

      <button type="button" name="button">
        <a href="/games">Back</a>
      </button>

    </div>

    <%- include ('../partials/footer.ejs') %>

    <div id="bottommost-margin">
		</div>

  </body>
</html>
